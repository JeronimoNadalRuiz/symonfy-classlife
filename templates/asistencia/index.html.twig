{% extends 'base.html.twig' %}

{% block title %}Asistencia Alumnado{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Asistencia Alumnado</h1>
        <table>
            <tr>
                <th>Alumno</th>
                <th>% Asistencia</th>
                <th>Ausencias Horas</th>
                <th>Ausencias Sesiones</th>

            </tr>
             {% for alumno in alumnos %}                 
                <tr>
                    {% for alumnoAula in alumnosAula %}                 
                        {% if (alumno.studentId==alumnoAula.studentId) %} 
                            <td>{{alumno.studentName}} {{alumno.studentLastname}}</td>
                        {% endif %}
                    {% endfor %} 
                <tr>  
            {% endfor %}        
        </table>
</div>
{% endblock %}
