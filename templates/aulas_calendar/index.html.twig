{% extends 'base.html.twig' %}

{% block title %}Listado de sesiones por aula y grupo!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Listado de sesiones por aula y grupo</h1>
    {% for aula in aulasGrupos %}
        <h3>Aula {{aula.aulaId}} - Grupo {{aula.groupId}}</h3>
        <table>
            <tr>
                <th>DÃ­a/hora</th>
                <th>Fecha</th>
            </tr>
            
            {% for sesion in sesiones %}
                {% if (sesion.aulaId==aula.aulaId) and (sesion.groupId==aula.groupId) %}
                    <tr>
                        <td>{{sesion.calendarDateIni|date('l H:i')}} - {{sesion.calendarDateEnd|date('H:i')}}</td>
                        <td>{{sesion.calendarDateIni|date('d/m/Y')}}</td>
                    </tr>   
                {% endif %}

            {% endfor %}
        </table>
    {% endfor %}
</div>
{% endblock %}
